<Window 
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" x:Name="Window1" 
       Title="Library" SizeToContent="Height" Width="448.792" ResizeMode="CanMinimize"> 
       <Grid x:Name="Grid1" Height="243" Margin="10" VerticalAlignment="Top">

       <Grid.ColumnDefinitions>
            <ColumnDefinition Width="241*"/>
            <ColumnDefinition Width="147*"/>
        </Grid.ColumnDefinitions>

        <Label x:Name="Title1" Content="Title:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="25" Width="50"/>
        <Label x:Name="Author1" Content="Author:" HorizontalAlignment="Left" Margin="212,10,0,0" VerticalAlignment="Top" Width="50" Height="25"/>
        <Label x:Name="Year1" Content="Year:" HorizontalAlignment="Left" Margin="10,45,0,0" VerticalAlignment="Top" Width="50"/>
        <Label x:Name="ISBN1" Content="ISBN:" HorizontalAlignment="Left" Margin="212,49,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.595,2.053" Height="22" Width="50"/>

        <Button x:Name="ViewAll1" Content="View All" HorizontalAlignment="Left" Margin="70,88,0,0" VerticalAlignment="Top" Width="75" Grid.Column="1" RenderTransformOrigin="0.649,0.577" Click="ViewAll1_Click"/>
        <Button x:Name="SearchBooks1" Content="Search Books" HorizontalAlignment="Left" Margin="70,113,0,0" VerticalAlignment="Top" Width="75" Grid.Column="1" Click="SearchBooks1_Click"/>
        <Button x:Name="AddBooks1" Content="Add Book" HorizontalAlignment="Left" Margin="70,138,0,0" VerticalAlignment="Top" Width="75" Grid.Column="1" Click="AddBooks1_Click"/>
        <Button x:Name="UpdateBook1" Content="Update Book" HorizontalAlignment="Left" Margin="70,163,0,0" VerticalAlignment="Top" Width="75" Grid.Column="1" Click="UpdateBook1_Click"/>
        <Button x:Name="DeleteBook1" Content="Delete Book" HorizontalAlignment="Left" Margin="70,188,0,0" VerticalAlignment="Top" Width="75" Grid.Column="1" Click="DeleteBook1_Click"/>
        <Button x:Name="Close1" Content="Close" HorizontalAlignment="Left" Margin="70,213,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.625,0.406" Grid.Column="1" Click="Close1_Click"/>

        <TextBox x:Name="Title2" HorizontalAlignment="Left" Height="25" Margin="70,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="135" VerticalContentAlignment="Center"/>
        <TextBox x:Name="Year2" HorizontalAlignment="Left" Height="25" Margin="70,45,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="135" VerticalContentAlignment="Center"/>
        <TextBox x:Name="Author2" HorizontalAlignment="Left" Height="25" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="135" VerticalContentAlignment="Center" Grid.Column="1"/>
        <TextBox x:Name="ISBN2" HorizontalAlignment="Left" Height="25" Margin="10,49,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="135" VerticalContentAlignment="Center" Grid.Column="1"/>

        <ListBox x:Name="List1" HorizontalAlignment="Left" Height="145" Margin="10,88,0,0" VerticalAlignment="Top" Width="302" Grid.ColumnSpan="2" PreviewMouseDoubleClick="List1_PreviewMouseDoubleClick"/>

        </Grid>
</Window> 
